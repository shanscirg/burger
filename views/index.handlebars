<p class="header">Eat-Da-Burger!</p>

<img
  src="https://joyfoodsunshine.com/wp-content/uploads/2017/04/Baked-Sweet-Potato-Black-Bean-Veggie-Burgers-gluten-free-4.jpg"
  alt="burger" height="300px" width="300px" />

<div class="wrapForm">
<p class="burgersTitle">Add a Burger</p>
<form class="create-form">
  <div class="form-group">
    <input type="text" id="burg" name="burger_name">
  </div>
  <button type="submit">Submit Burger</button>
</form>
</div>

<section class="container">
  <div class="burgerDiv">
    <p class="burgersTitle">Burgers to be devoured!</p>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="burgerDiv">
    <p class="burgersTitle">Burgers that have been devoured!</p>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</section>