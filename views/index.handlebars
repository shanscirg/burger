<h1>Eat-Da-Burger!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured!
    <input type="text" id="burg" name="burger_name">
  </div>
  <button type="submit">Submit Burger</button>

  <h2>Burgers to be devoured!</h2>
  <ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
  </ul>


  <h2>Burgers that have been devoured!</h2>
  <ul>
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
  </ul>

</form>