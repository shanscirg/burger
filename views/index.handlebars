<p class="header burger-title">Welcome to BurgerVille!</p>


<div class="outer-div">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 burg-image" src="/assets/img/burger.jpeg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 burg-image" src="/assets/img/burger2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 burg-image" src="/assets/img/burger3.jpg" alt="Third slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="wrapForm">
  <p class="burgersTitle">Add a Burger</p>
  <form class="create-form">
    <div class="form-group">
      <input type="text" id="burg" name="burger_name">
    </div>
    <button class="submit-burger" type="submit">Submit Burger</button>
  </form>
</div>

<section class="container">
  <div class="burgerDiv">
    <p class="burgersTitle">Burgers to be devoured!</p>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devour=false}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <img class="arrow-img" src="/assets/img/arrow1.png" alt="arrow" />

  <div class="burgerDiv">
    <p class="burgersTitle">Devoured burgers!</p>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devour=true}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</section>